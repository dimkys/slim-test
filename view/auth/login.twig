{% extends "base.twig" %}

{% block content %}
<h1>Hello, Login please</h1>
    <div class="auth-form">
        <form id="auth" action="/auth" method="post">
            <label>
                <span>Login:</span>
                <input type="text" name="login">
            </label>
            <label>
                <span>Password:</span>
                <input type="text" name="password">
            </label>

            <button form="auth">Login</button>
        </form>
        <a href="/auth/register" class="register">
            <button>Register</button>
        </a>
    </div>
{% endblock %}