{% extends "base.twig" %}

{% block content %}
<h1>Hello, Register please</h1>
    <div class="auth-form">
        <form id="register" action="/auth/register" method="post">
            <label>
                <span>Login:</span>
                <input type="text" name="login">
            </label>
            <label>
                <span>Password:</span>
                <input type="text" name="password">
            </label>

            <button form="register">Register</button>
        </form>
    </div>
{% endblock %}